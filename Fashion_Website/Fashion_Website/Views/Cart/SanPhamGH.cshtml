                @foreach (var item in Model)

                {
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs">
                                    <img src="~/images/@item.ProductImg" class="img-responsive" style="width: 100px; height: 100px;" alt="@item.ProductName" />
                                </div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin">@item.ProductName - (@item.ProductSize)</h4>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">@item.Price.ToString("c") đ</td>
                        <td data-th="Quantity">
                            <input class="form-control text-center" type="number" name="quantity" value="@item.Quantity" min="1" max="10">
                        </td>
                        <td data-th="Subtotal" class="text-center">@item.Subtotal.ToString("c") đ</td>
                        <td class="actions" data-th="">
                            <button class="btn btn-info btn-sm">
