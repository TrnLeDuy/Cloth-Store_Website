@model Fashion_Website.Models.USER

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="background-image: url('../../Images/fashion-background.png');">
    <div class="inner">

        @using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Tạo mới khách hàng</h3>
            <div class="form-group">
                <div class="form-wrapper">
                    @Html.LabelFor(model => model.MaKH)
                    <div class="col-md-10">
                        <input style="background:#ececec" name="MaKH" value="@{
                    String data = new Fashion_Website.Models.taoMa.taoMaKhachHang().TaoMaKhachHang();
                    @data
                }" readonly />
                    </div>
                    @*<input type="text" class="form-control1">*@
                </div>
                <div class="form-wrapper">
                    @Html.LabelFor(model => model.Username)
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control1" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-wrapper">
                @Html.LabelFor(model => model.UserPass)
                @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control1" } })
                @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
            </div>
            <div class="form-wrapper">
                @Html.LabelFor(model => model.UserRole)
                @Html.EditorFor(model => model.UserRole, new { htmlAttributes = new { @class = "form-control1", @type = "date" } })
                @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
            </div>
            <div class="form-wrapper">
                @Html.LabelFor(model => model.TinhTrang)
                @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control1" } })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>

            <button class="btn btn-success button1">Tạo tài khoản</button>
        }
        <div style="margin-left:45px;color:#ccc">
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>

</div>

