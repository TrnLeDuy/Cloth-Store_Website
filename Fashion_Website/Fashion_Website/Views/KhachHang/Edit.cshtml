@model Fashion_Website.Models.KHACHHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Assets/js/previewFile.js"></script>


<div class="container" style="background-color: whitesmoke;">
    <div class="inner">
        @using (Html.BeginForm("Edit", "KhachHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h3>Cập nhật Khách hàng</h3>
            <hr />
            @Html.HiddenFor(m => m.MaKH)
            @Html.HiddenFor(m => m.NgaySinh)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-wrapper">
                    Mã Khách hàng
                    @Html.EditorFor(model => model.MaKH, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control1",
                       @readonly = "readonly"
                   }
               })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>

                <div class="form-wrapper">
                    Họ tên
                    @Html.EditorFor(model => model.HoTen, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control1",
                       @readonly = "readonly"
                   }
               })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                Số điện thoại
                @Html.EditorFor(model => model.SDT, new
           {
               htmlAttributes = new
               {
                   @class = "form-control1",
                   @readonly = "readonly"
               }
           })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Email</div>
                    @Html.EditorFor(model => model.Email, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control1",
                       @readonly = "readonly"
                   }
               })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Ngày Sinh</div>
                <div>
                    @Html.EditorFor(model => model.NgaySinh, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control1",
                       @readonly = "readonly"
                   }
               })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                Giới tính
                @Html.DropDownListFor(model => model.GioiTinh,
                             new List<SelectListItem>
                             {
                                new SelectListItem{Text="Nam", Value="M"},
                                new SelectListItem{Text="Nữ", Value="F"}}, "Lựa chọn",
                             new { @class = "form-control1", @id = "gioitinh"/*, @readonly = "readonly"*/ })
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @class = "col-md-5" })
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control1" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.Username, "Tài khoản", htmlAttributes: new { @class = "col-md-5" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control1", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.UserPass, "Mật khẩu", htmlAttributes: new { @class = "col-md-5" })
                    @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control1", type = "password" } })
                    @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Tình Trạng</div>
                @Html.DropDownListFor(model => model.TinhTrang,
                             new List<SelectListItem>
                             {
                                new SelectListItem{Text="Khóa", Value="0"},
                                new SelectListItem{Text="Hoạt động", Value="1"}}, "Lựa chọn",
                             new { @class = "form-control1", @id = "tinhtrang" })
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.avatar, "Hình đại diện", htmlAttributes: new { @class = "col-md-5" })
                <div class="col-md-10">
                    @Html.HiddenFor(m => m.avatar)
                    <input class="form-control1" type="File" id="file_Hinh" name="avatar" onchange="previewFile();">
                    <span id="file-display"></span>
                </div>
            </div>
            <div class="form-input form-wrapper">
                <label for="previewImg">Xem trước hình</label>
                <div class="col-md-10">
                    <img id="target" class="img" src="~/images/@Model.avatar" alt="your image" style="width: 320px; height: 300px;" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="btn btn-success button1" type="submit" value="Xác nhận">
                </div>
                <div>
                    @Html.ActionLink("Quay về Danh sách", "Index")
                </div>
            </div>
         }
   </div>   
</div>
