@model Fashion_Website.Models.KHACHHANG

@{
    ViewBag.Title = "Thêm Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Assets/js/previewFile.js"></script>

<div class="container" style="background-color:whitesmoke;">
    <div class="inner">

        @using (Html.BeginForm("Create", "KhachHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

         <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>Thêm Khách hàng mới</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-wrapper">
                <div class="col-md-5">Mã Khách</div>
                    <input class="form-control1" style="background:#ececec" name="MaKH" value="@{
                    String data = new Fashion_Website.Models.taoMa.taoMaKhachHang().TaoMaKhachHang();
                    @data
                }" readonly />
                </div>

                <div class="form-wrapper">
                    <div class="col-md-5">Họ tên</div>
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-wrapper">
                    <div class="col-md-5">Số liên lạc</div>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>

                <div class="form-wrapper">
                    <div class="col-md-5">Email</div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="form-wrapper" style="text-align: left;">
                    <div class="col-md-5">Ngày Sinh</div>
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control1", type = "date" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
                <div class="form-wrapper" style="text-align: left;">
                    <div class="col-md-5">Giới tính</div>
                    @Html.DropDownListFor(model => model.GioiTinh,
                    new List<SelectListItem>
                    {
                        new SelectListItem{Text="Nam", Value="M"},
                        new SelectListItem{Text="Nữ", Value="F"}}, "Lựa chọn",
                    new { @class = "form-control1", @id = "gioitinh", required = "required" })
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Địa chỉ</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Tài khoản</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Mật khẩu</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control1", type = "password", required = "required" } })
                    @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Tình trạng</div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.TinhTrang,
                    new List<SelectListItem>
                    {
                        new SelectListItem{Text="Hoạt động", Value="1"},
                        new SelectListItem{Text="Khóa", Value="0"}}, "Lựa chọn",
                    new { @class = "form-control1", @id = "tinhtrang", required = "required" })
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Hình đại diện</div>
                <div class="col-md-10">
                    <input class="form-control1" type="File" id="file_Hinh" name="avatar" onchange="previewFile();">
                    @Html.ValidationMessageFor(model => model.avatar, "", new { @class = "text-danger" })
                </div>
            </div>

            <input class="btn btn-success button1" type="submit" value="Xác nhận">

         </div>
         }

        <div style="margin-left:238px;color:#ccc">
            @Html.ActionLink("Quay về Danh sách", "Index")
        </div>
    </div>

</div>